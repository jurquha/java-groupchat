<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>

<GridPane fx:controller="edu.adhoc.app.ChatRoomController" xmlns:fx="http://javafx.com/fxml" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="500" minWidth="500" prefWidth="700" prefHeight="700" alignment="center" hgap="10" vgap="10">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>
    <ScrollPane GridPane.columnIndex="1" GridPane.rowIndex="0">
        <VBox fx:id="messageBox" maxHeight="200" maxWidth="200"/>
    </ScrollPane>
    <ScrollPane GridPane.columnIndex="0" GridPane.rowIndex="0">
        <VBox fx:id="userListVBox" maxHeight="200" maxWidth="200"/>
    </ScrollPane>
    <Label  text="Enter Message:"
            GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField  fx:id="enterTextField"
                onAction="#handleOnActionEnterField"
                GridPane.columnIndex="1" GridPane.rowIndex="1"/>
</GridPane>