<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" prefHeight="200" prefWidth="400" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.121" fx:controller="edu.adhoc.app.LoginController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <!--<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="20.0" />-->
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="5.0" prefHeight="10.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="5.0" prefHeight="10.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="5.0" prefHeight="10.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <padding><Insets bottom="10" left="25" right="25" top="25" /></padding>
    <TextField fx:id="userNameTextField" promptText="Display Name" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="ipAddressTextField" promptText="Chatroom IP Address" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="portNumberTextField" promptText="Port Number" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <Button fx:id="connectButton" onAction="#handleConnectButtonOnAction" text="Connect" GridPane.halignment="CENTER" GridPane.rowIndex="3" />

</GridPane>
