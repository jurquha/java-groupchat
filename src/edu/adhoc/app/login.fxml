<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>

<GridPane fx:controller="edu.adhoc.app.LoginController" xmlns:fx="http://javafx.com/fxml" alignment="center" prefHeight="200" prefWidth="400" hgap="10" vgap="10">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="20.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="5.0" prefHeight="10.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="5.0" prefHeight="10.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="5.0" prefHeight="10.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>
    <TextField fx:id="userNameTextField" promptText="Display Name" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="ipAddressTextField" promptText="Chatroom IP Address" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="portNumberTextField" promptText="Port Number" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <Button fx:id="connectButton" onAction="#handleConnectButtonOnAction" text="Connect" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

</GridPane>
